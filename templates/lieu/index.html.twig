{% extends 'base.html.twig' %}

{% block title %}Hello LieuController!{% endblock %}

{% block body %}
    <style>
        .btn-h-2rem {
            height: 2rem;
        }
    </style>
    <h1>Accueil</h1>

    <h2 class="mb-2">Lieux disponibles à la création d'un évènement : </h2>

    {% if alertMessage != "" %}
        <div class="alert alert-danger" role="alert">
            {{ alertMessage }}
        </div>
    {% endif %}

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 text-start">
        {% for lieu in lieux %}
            <div class="col p-2">
                <div class="card h-100">
                    <div class="card-body d-flex flex-wrap">
                        <h5 class="card-title w-100 align-self-start">{{ lieu.label }}</h5>
                        {% if is_granted("ROLE_ADMIN") %}
                            <a type="button" class="btn btn-sm btn-danger btn-h-2rem mx-2" href="{{ path("app_delete_lieu", {"id": lieu.id})}}">Supprimer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
